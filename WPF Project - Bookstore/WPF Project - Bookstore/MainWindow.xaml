<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project___Bookstore"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
        xmlns:wpfx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WPF_Project___Bookstore.MainWindow"
        mc:Ignorable="d"
        Title="User" Height="600" Width="1000" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Grid>
            <TabControl x:Name="Tabs" TabStripPlacement="Left">
                <!--Login-->
                <TabItem x:Name="Login_Page" TabIndex="0" Header="Login">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="400" Height="270" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Width="400" Height="270" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10">
                                <TextBox x:Name="LoginUsernameBox" materialDesign:HintAssist.Hint="Username" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Login_Usarname_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <PasswordBox x:Name="LoginPasswordBox" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="0,15"/>
                                <TextBlock x:Name="Login_Password_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                            </StackPanel>
                            <Button VerticalAlignment="Bottom" Margin="0,-15" Width="150" Cursor="Hand" Content="Sign In" Click="Login_SignIn_Button_Click"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-15,-15" Width="39" Height="39" Cursor="Hand" Content="Sign&#xA; Up" Click="Login_SignUp_Button_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--Register-->
                <TabItem x:Name="Register_Page" TabIndex="1" Header="Register" Margin="-2,0,0,-4">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="450" Height="370" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Width="450" Height="370" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Sign Up" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10">
                                <TextBox x:Name="RegisterUsernameBox" materialDesign:HintAssist.Hint="Username" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Register_Usarname_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <TextBox x:Name="RegisterEmailBox" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Register_Email_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <TextBox x:Name="RegisterPhoneNumberBox" materialDesign:HintAssist.Hint="Phone Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Register_PhoneNumber_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <PasswordBox x:Name="RegisterPasswordBox" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="0,15"/>
                                <TextBlock x:Name="Register_Password_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                            </StackPanel>
                            <Button VerticalAlignment="Bottom" Margin="0,-15" Width="150" Cursor="Hand" Content="Sign Up" Click="Register_SignUp_Button_Click"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-15,-15" Width="39" Height="39" Cursor="Hand" Content="Login" Click="Register_SignIn_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--Payment-->
                <TabItem x:Name="Payment_Page" TabIndex="2" Header="Payment">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="400" Height="320" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Width="400" Height="320" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Payment" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10">
                                <TextBox x:Name="CreditCardNumberBox" materialDesign:HintAssist.Hint="Card Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Payment_CardNumber_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <TextBox x:Name="CVV2Box" materialDesign:HintAssist.Hint="CVV2" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15"/>
                                <TextBlock x:Name="Payment_CVV_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="YearBox" materialDesign:HintAssist.Hint="Year" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,15,5,15"/>
                                    <TextBox Grid.Column="1" x:Name="monthBox" materialDesign:HintAssist.Hint="Month" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="5,15,0,15"/>
                                </Grid>
                                <TextBlock x:Name="Payment_Month_Alert" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-10,0,0" Foreground="red" FontSize="13"/>
                            </StackPanel>
                            <Button VerticalAlignment="Bottom" Margin="0,-15" Width="150" Cursor="Hand" Content="Pay" Click="Payment_PayButton_Click"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-15,-15" Width="39" Height="39" Cursor="Hand" Content="Back" Click="Payment_BackButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </TabItem>











                <!--Manager Main Menu-->
                <TabItem x:Name="Manager_Main_Menu_Page" TabIndex="3" Header="ManagerMainMenu">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Left"  RadiusY="22" RadiusX="22" Margin="40,5,0,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#ffffff"/>
                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center" RadiusY="22" RadiusX="22" Margin="0,5,0,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#ffffff"/>
                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Right" RadiusY="22" RadiusX="22" Margin="0,5,40,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#ffffff"/>
                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <StackPanel Margin="0,30,0,0">
                            <TextBlock x:Name="mang" Text="Manager Main Menu" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
                        </StackPanel>
                        <Grid>
                            <Button VerticalAlignment="Bottom" Margin="0,0,0,0" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="40,5,0,0">
                            <TextBlock Text="Employees" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Employees"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,5,0,0">
                            <TextBlock Text="Books" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_BookButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Books"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="0,5,40,0">
                            <TextBlock Text="Bank" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_BankAccountButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Bank"/>
                        </Grid>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center"  Margin="0,0,0,35">
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="39" Height="39" Cursor="Hand" Content="Exit" Click="Exit_Button_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </StackPanel>
                        <!--
                            -->
                        <!--images-->
                        <!--
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2">
                                <Image Source="Books-removebg-preview.png" Height="145"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Image Source="images/Employee-removebg-preview.png" Height="162"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Image Source="images/Books-removebg-preview.png" Height="150"/>
                            </StackPanel>-->
                    </Grid>
                </TabItem>

                <!--Manager Employee Section List-->
                <TabItem x:Name="Manager_Employee_Section_List_Page" TabIndex="5" Header="Manager_EmployeeSection_List">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="600" Height="480" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Margin="0,10,0,0" Width="600" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="600" Height="470" VerticalAlignment="Center" HorizontalAlignment="Center">

                            <Rectangle Visibility="Hidden" x:Name="SubmitEmployeePayRect" RadiusX="10" RadiusY="10" Margin="0,0,0,-25" Width="400" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Fill="White">
                                <Rectangle.Effect>
                                    <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <Grid Visibility="Hidden" x:Name="SubmitEmployeePay" Margin="0,0,0,-25" Width="400" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox Grid.Column="0" Margin="10,-5,0,0" Padding="0" x:Name="PayEmployeePasswordBox" materialDesign:HintAssist.Hint="Password" VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                                <Button Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" Height="30" Width="100" Cursor="Hand" Content="Submit" HorizontalAlignment="Right" Click="Employees_Sumbmit_Pay_Click"/>
                            </Grid>
                            <TextBlock Text="Employees" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button VerticalAlignment="Bottom" x:Name="PayEmployeeButton" Margin="0,-20" Width="150" Cursor="Hand" Content="Pay" Click="Manager_EmployeeSection_ListSection_PayButton_Click"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Back" Click="Manager_EmployeeSection_ListSection_Back_Button_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Add" Click="Manager_EmployeeSection_ListSection_AddButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                            <TextBlock Text="" VerticalAlignment="Bottom" x:Name="Alert_Employee_Pay" HorizontalAlignment="Center" Margin="0,0,0,-50" Foreground="Red" FontSize="14"/>
                        </Grid>

                        <Grid Margin="0,10,0,0" Width="600" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid Margin="-1,5,0,0" Height="20" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.9*"/>
                                    <ColumnDefinition Width="1.3*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="0.3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="10,0,0,0" Text="Username"/>
                                <TextBlock Grid.Column="1" Text="Email"/>
                                <TextBlock Grid.Column="2" Text="Phone Number"/>
                                <Button x:Name="Remove_All_Selected_Employee_Button" Visibility="Hidden" Content="Remove" Grid.Column="3" Margin="20,0,0,3" Height="10" Width="10" Background="Red" HorizontalAlignment="Left" Click="Remove_Employee_Click2" />
                            </Grid>
                            <ScrollViewer Margin="0,26,0,0" >
                                <ItemsControl Padding="0,-50,0,0" Margin="0,-3,0,0" x:Name="Bindi" ItemsSource= "{Binding Employees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="600">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.9*"/>
                                                    <ColumnDefinition Width="1.3*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="4" CornerRadius="5" BorderThickness="1" Background="LightBlue" BorderBrush="Black" Margin="6,3,22,0"/>
                                                <TextBlock Grid.Column="0" Margin="10,2,0,0" Text="{Binding Username}"/>
                                                <TextBlock Grid.Column="1" Margin="0,2,0,0" Text="{Binding Email}"/>
                                                <TextBlock Grid.Column="2" Margin="0,2,0,0" Text="{Binding Phone_Number}"/>
                                                <Button Tag="{Binding Username}" Grid.Column="3" Margin="20,3,0,0" Height="10" Width="10" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" HorizontalAlignment="Left" Click="Remove_Employee_Click" Background="YellowGreen" IsDefault="False" mah:ControlsHelper.RecognizesAccessKey="True"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--Manager Books Sections List-->
                <TabItem x:Name="Manager_Books_Sections_List_Page" TabIndex="6" Header="Manager_BooksSection_List">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="600" Height="480" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Width="600" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" Margin="0,10,0,0">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="600" Height="470" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="qwer1" Text="Books" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Back" Click="Manager_BooksSection_BackButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Add" Click="Manager_BooksSection_AddButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </Grid>
                        <Grid Width="600" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Grid Margin="-1,5,0,0" Height="20" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.6*"/>
                                    <ColumnDefinition Width="1.6*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="10,0,0,0" Text="Name"/>
                                <TextBlock Grid.Column="1" Text="Author"/>
                                <TextBlock Grid.Column="2" Text="Genre"/>
                                <TextBlock Grid.Column="3" Text="Publish No" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Number" HorizontalAlignment="Center"/>
                            </Grid>
                            <ScrollViewer Margin="0,26,0,0" >
                                <ItemsControl Padding="0,-50,0,0" Margin="0,-3,0,0" x:Name="Bindi_Books" ItemsSource= "{Binding Books, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="600">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.6*"/>
                                                    <ColumnDefinition Width="1.6*"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="5" CornerRadius="5" BorderThickness="1" Background="LightBlue" BorderBrush="Black" Margin="6,3,22,0"/>
                                                <TextBlock Grid.Column="0" Margin="10,2,0,0" Text="{Binding Name}"/>
                                                <TextBlock Grid.Column="1" Margin="0,2,0,0" Text="{Binding Author}"/>
                                                <TextBlock Grid.Column="2" Margin="0,2,0,0" Text="{Binding Genre}"/>
                                                <TextBlock Grid.Column="3" Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding PublishNo}"/>
                                                <TextBlock Grid.Column="4" Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Number}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--Manager Bank Account Section-->
                <TabItem x:Name="Manager_Bank_Account_Section_Page" TabIndex="7" Header="Manager_BankAccountSectuon">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="400" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
