                        </Rectangle>
                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Left"  RadiusY="22" RadiusX="22" Margin="40,50,0,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
