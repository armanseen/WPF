                        <Grid Width="600" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Grid Margin="-1,5,0,0" Height="20" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.6*"/>
                                    <ColumnDefinition Width="1.6*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="10,0,0,0" Text="Name"/>
                                <TextBlock Grid.Column="1" Text="Author"/>
                                <TextBlock Grid.Column="2" Text="Genre"/>
                                <TextBlock Grid.Column="3" Text="Publish No" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Number" HorizontalAlignment="Center"/>
                            </Grid>
                            <ScrollViewer Margin="0,26,0,0" >
                                <ItemsControl Padding="0,-50,0,0" Margin="0,-3,0,0" x:Name="Bindi_Books" ItemsSource= "{Binding Books, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="600">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.6*"/>
                                                    <ColumnDefinition Width="1.6*"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="5" CornerRadius="5" BorderThickness="1" Background="LightBlue" BorderBrush="Black" Margin="6,3,22,0"/>
                                                <TextBlock Grid.Column="0" Margin="10,2,0,0" Text="{Binding Name}"/>
                                                <TextBlock Grid.Column="1" Margin="0,2,0,0" Text="{Binding Author}"/>
                                                <TextBlock Grid.Column="2" Margin="0,2,0,0" Text="{Binding Genre}"/>
                                                <TextBlock Grid.Column="3" Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding PublishNo}"/>
                                                <TextBlock Grid.Column="4" Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Number}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
