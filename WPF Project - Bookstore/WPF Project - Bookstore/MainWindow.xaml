                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="600" Height="470" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="qwer1" Text="Books" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Back" Click="Manager_BooksSection_BackButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-20,-20" Width="39" Height="39" Cursor="Hand" Content="Add" Click="Manager_BooksSection_AddButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
