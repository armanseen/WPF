                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center" RadiusY="22" RadiusX="22" Margin="0,50,0,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#ffffff"/>
                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Right" RadiusY="22" RadiusX="22" Margin="0,50,40,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#ffffff"/>
                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <StackPanel Margin="0,60,0,0">
                            <TextBlock x:Name="mang" Text="Manager Main Menu" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
                        </StackPanel>
                        <Grid>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="40,50,0,0">
                            <TextBlock Text="Employees" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Employees"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,50,0,0">
                            <TextBlock Text="Books" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_BookButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Books"/>
                        </Grid>
                        <Grid Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="0,50,40,0">
                            <TextBlock Text="Bank" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <Button Click="Manager_BankAccountButton_Click" VerticalAlignment="Bottom" Margin="0,-15" Width="100" Cursor="Hand" Content="Bank"/>
                        </Grid>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center"  Margin="0,0,0,50">
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-15,-15" Width="39" Height="39" Cursor="Hand" Content="Exit" Click="Exit_Button_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </StackPanel>
                        <!--
                            -->
                        <!--images-->
                        <!--
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2">
                                <Image Source="Books-removebg-preview.png" Height="145"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Image Source="images/Employee-removebg-preview.png" Height="162"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Image Source="images/Books-removebg-preview.png" Height="150"/>
                            </StackPanel>-->
                    </Grid>
                </TabItem>

                <!--Manager Employee Section List-->
                <TabItem x:Name="Manager_Employee_Section_List_Page" TabIndex="5" Header="Manager_EmployeeSection_List">
                    <Grid>
                        <Rectangle Height="800" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#2980B9"/>
                                    <GradientStop Color="#6DD5FA" Offset="0.5"/>
                                    <GradientStop Color="#FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Width="600" Height="480" VerticalAlignment="Top" HorizontalAlignment="Center" Fill="White" RadiusY="22" RadiusX="22" Margin="0,20,0,0">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Rectangle Width="600" Height="400" VerticalAlignment="Top" HorizontalAlignment="Center" Fill="White" Margin="0,60,0,0">
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid>
                            <Button Click="Manager_EmplpyeeButton_Click" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="0" Cursor="Hand"/>
                        </Grid>
                        <Grid Width="600" Height="470" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <TextBlock x:Name="qweasd" Text="Employees" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="16"/>
                            <StackPanel VerticalAlignment="Center" Margin="10"/>
                            <Button VerticalAlignment="Bottom" Margin="0,-25" Width="150" Cursor="Hand" Content="Pay" Click="Manager_EmployeeSection_ListSection_PayButton_Click"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="DeepPink" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-20,-25" Width="39" Height="39" Cursor="Hand" Content="Back" Click="Manager_EmployeeSection_ListSection_Back_Button_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" Background="GreenYellow" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-20,-25" Width="39" Height="39" Cursor="Hand" Content="Add" Click="Manager_EmployeeSection_ListSection_AddButton_Click" Foreground="Black" FontFamily="Comic Sans MS" FontWeight="Bold"/>
                        </Grid>

                        <Grid Width="600" Height="400" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">
                            <Grid Margin="-1,5,0,0" Height="20" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.9*"/>
                                    <ColumnDefinition Width="1.3*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="0.3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="10,0,0,0" Text="Username"/>
                                <TextBlock Grid.Column="1" Text="Email"/>
                                <TextBlock Grid.Column="2" Text="Phone Number"/>
                                <Button x:Name="Remove_All_Selected_Employee_Button" Visibility="Hidden" Content="Remove" Grid.Column="3" Margin="20,0,0,3" Height="10" Width="10" Background="Red" HorizontalAlignment="Left" Click="Remove_Employee_Click2" />
                            </Grid>
                            <ScrollViewer Margin="0,26,0,0" >
                                <ItemsControl Padding="0,-50,0,0" Margin="0,-3,0,0" x:Name="Bindi" ItemsSource= "{Binding Employees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="600">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.9*"/>
                                                    <ColumnDefinition Width="1.3*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.ColumnSpan="4" CornerRadius="5" BorderThickness="1" Background="LightBlue" BorderBrush="Black" Margin="6,3,22,0"/>
                                                <TextBlock Grid.Column="0" Margin="10,2,0,0" Text="{Binding Username}"/>
                                                <TextBlock Grid.Column="1" Margin="0,2,0,0" Text="{Binding Email}"/>
                                                <TextBlock Grid.Column="2" Margin="0,2,0,0" Text="{Binding Phone_Number}"/>
                                                <Button Tag="{Binding Username}" Grid.Column="3" Margin="20,3,0,0" Height="10" Width="10" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" HorizontalAlignment="Left" Click="Remove_Employee_Click" Background="YellowGreen" IsDefault="False" mah:ControlsHelper.RecognizesAccessKey="True"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--Manager Books Sections List-->
                <TabItem x:Name="Manager_Books_Sections_List_Page" TabIndex="6" Header="Manager_BooksSection_List">
                    <Grid>
