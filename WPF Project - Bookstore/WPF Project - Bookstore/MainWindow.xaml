                                    <GradientStop Color="#ffffff" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect Color="#2980F9" Direction="0" BlurRadius="10" RenderingBias="Quality" ShadowDepth="1"/>
